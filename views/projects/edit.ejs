<% include ../partial/header%>
<% include ../partial/navbar%>
<div class="container-fluid">
    <div>
        <h1>Edit Project</h1>
    </div>
    <hr>
</div>
<div class="container">
    <form action="" method="POST">
        <div class="form-group row">
            <label for="name" class="col-sm-2 col-form-label">Project Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="name" value="<%= name%>">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2">Members</div>
            <div class="col-sm-10">
                <% users.forEach((item) => { %>
                <div class="custom-control custom-checkbox my-1 mr-sm-2">
                    <input type="checkbox" class="custom-control-input" id="customControlInline<%=item.userid%>"
                        name="member" value="<%= item.userid%>, '<%= item.roles %>'"
                        <%= members.includes(item.userid)  ? ' checked': ''%>>
                    <label class="custom-control-label" for="customControlInline<%=item.userid%>"><%= item.firstname %>
                        <%= item.lastname %></label>
                </div>
                <% })%>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Save</button>
                <a href="/projects" class="btn btn-warning">Cancel</a>
            </div>
        </div>
    </form>

</div>

<% include ../partial/footer%>